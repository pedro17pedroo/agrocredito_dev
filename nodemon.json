{
  "watch": [
    "server",
    "shared",
    ".env"
  ],
  "ext": "ts,js,json",
  "ignore": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.d.ts"
  ],
  "exec": "tsx server/index.ts",
  "env": {
    "NODE_ENV": "development",
    "PORT": "5000"
  },
  "delay": 1000,
  "restartable": "rs",
  "verbose": true,
  "colours": true,
  "legacyWatch": false,
  "pollingInterval": 100,
  "runOnChangeOnly": false,
  "signal": "SIGTERM",
  "stdout": true,
  "stderr": true
}