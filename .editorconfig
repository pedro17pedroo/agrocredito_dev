# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# CSS, SCSS, and related files
[*.{css,scss,sass,less}]
indent_size = 2

# HTML files
[*.{html,htm}]
indent_size = 2

# Markdown files
[*.{md,mdx}]
trim_trailing_whitespace = false
max_line_length = 80

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2
end_of_line = lf



# Configuration files
[*.{toml,ini,cfg,conf}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2
max_line_length = 120

# Environment files
[.env*]
indent_size = 2
trim_trailing_whitespace = true

# Package files
[{package.json,package-lock.json,yarn.lock,pnpm-lock.yaml}]
indent_size = 2

# Git files
[{.gitignore,.gitattributes}]
indent_size = 2

# GitHub workflows
[.github/workflows/*.{yml,yaml}]
indent_size = 2

# VS Code settings
[.vscode/*.json]
indent_size = 2